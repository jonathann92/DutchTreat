{
  "compileOnSave": false,
  "include": [
    "./ClientApp",
    "./wwwroot/ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./wwwroot/clientapp/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "ES5",
      "ES2015",
      "DOM",
      "ScriptHost"
    ]
  }
}
